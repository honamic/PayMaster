@page "/tracking"
@model WebSample.Pages.Charge.TrackingModel

@{
    ViewData["Title"] = "پیگیری پرداخت";
}

<div class="container py-5" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">پیگیری پرداخت</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label for="receiptId" class="form-label">شناسه قبض</label>
                            <input type="text" id="receiptId" name="ReceiptRequestId" class="form-control" required />
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search me-2"></i>پیگیری قبض
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
