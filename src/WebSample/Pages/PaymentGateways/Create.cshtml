@page "/payment-gateways/create"
@model CreateModel
@{
    ViewData["Title"] = "ایجاد درگاه پرداخت جدید";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <form method="post">
        <div class="mb-3">
            <label asp-for="Input.Title" class="form-label">عنوان</label>
            <input asp-for="Input.Title" class="form-control" />
            <span asp-validation-for="Input.Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Code" class="form-label">کد</label>
            <input asp-for="Input.Code" class="form-control" />
            <span asp-validation-for="Input.Code" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.ProviderType" class="form-label">نوع درگاه آن لاین</label>
            <select asp-for="Input.ProviderType" asp-items="Model.PaymentGatewayProviders" class="form-select" id="providerTypeSelect">
                <option value="">-- لطفاً درگاه بانکی را مشخص کنید --</option>
            </select>
            <span asp-validation-for="Input.ProviderType" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.LogoPath" class="form-label">مسیر لوگو</label>
            <input asp-for="Input.LogoPath" class="form-control" />
            <span asp-validation-for="Input.LogoPath" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.JsonConfigurations" class="form-label">تنظیمات (JSON)</label>
            <textarea dir="ltr" asp-for="Input.JsonConfigurations" class="form-control" rows="7" id="jsonConfigTextarea"></textarea>
            <span asp-validation-for="Input.JsonConfigurations" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.MinimumAmount" class="form-label">حداقل مبلغ</label>
            <input asp-for="Input.MinimumAmount" class="form-control" type="number" />
            <span asp-validation-for="Input.MinimumAmount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.MaximumAmount" class="form-label">حداکثر مبلغ</label>
            <input asp-for="Input.MaximumAmount" class="form-control" type="number" />
            <span asp-validation-for="Input.MaximumAmount" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="Input.Enabled" class="form-check-input" type="checkbox" />
            <label asp-for="Input.Enabled" class="form-check-label">فعال</label>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">ذخیره</button>
            <a asp-page="./Index" class="btn btn-secondary">بازگشت</a>
        </div>
    </form>
</div>

@section Scripts {
    @*@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}*@

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const providerSelect = document.getElementById("providerTypeSelect");
            const jsonTextarea = document.getElementById("jsonConfigTextarea");

            providerSelect.addEventListener("change", function () {
                const selectedValue = this.value;

                if (!selectedValue) {
                    jsonTextarea.value = "";
                    return;
                }
                fetch(`/api/management/paymaster/payment-gateway-providers/default-configuration-by-provider-type?ProviderType=${selectedValue}&SandBox=false`)
                    .then(response => {
                        if (!response.ok)
                            throw new Error("خطا در دریافت تنظیمات");

                            debugger;

                        return response.json();
                    })
                    .then(result  => {
                        const config = result?.data?.configuration;
                        if (config) {
                            const parsed = JSON.parse(config);
                            jsonTextarea.value =JSON.stringify(parsed,null,2);
                        } else {
                            jsonTextarea.value = "// تنظیمات یافت نشد " + result ;
                        }
                    })
                    .catch(error => {
                        console.error("خطا:", error);
                        jsonTextarea.value = "// دریافت تنظیمات با خطا مواجه شد " +error;
                    });
            });
        });
    </script>
}
