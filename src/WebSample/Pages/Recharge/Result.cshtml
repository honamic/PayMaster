@page "/result/{ReceiptRequestId}/{Status?}"
@using Honamic.PayMaster.ReceiptRequests;

@model WebSample.Pages.Recharge.ResultModel
@{
    ViewData["Title"] = "نتیجه پرداخت";
}

<div class="container py-5" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">نتیجه پرداخت</h4>
                </div>
                @if (Model.Receipt is null)
                {
                    <div class="alert alert-danger" role="alert">
                        <h5 class="alert-heading">@Model.Message</h5>
                    </div>
                }
                else
                {
                    <div class="card-body text-center">
                        @if (Model.Receipt.Status == Honamic.PayMaster.ReceiptRequests.ReceiptRequestStatus.Done)
                        {
                            <div class="alert alert-success" role="alert">
                                <h5 class="alert-heading">پرداخت موفق</h5>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger" role="alert">
                                <h5 class="alert-heading">پرداخت ناموفق!</h5>
                            </div>
                            <div class="mt-3">
                                <a href="/repay/@Model.Receipt.Id" class="btn btn-primary">
                                    <i class="bi bi-arrow-repeat me-2"></i>پرداخت مجدد
                                </a>
                            </div>
                        }
                        <hr />
                        <p>شناسه قبض: <strong>@Model.Receipt.Id</strong></p>
                        <p class="mb-0">وضعیت: <strong>@Model.Receipt.Status</strong></p>
                        <p class="mb-0">مبلغ: <strong>@Model.Receipt.Amount.ToString("N0") @Model.Receipt.Currency</strong></p>

                        @if (Model.Receipt.GatewayPayments?.Any() == true)
                        {
                            <div class="mt-4">
                                <h6 class="mb-3">تاریخچه پرداخت‌ها</h6>
                                <div class="list-group">
                                    @foreach (var payment in Model.Receipt.GatewayPayments)
                                    {
                                        <div class="list-group-item">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    @{
                                                        var (statusClass, icon) = payment.Status switch
                                                        {
                                                            PaymentGatewayStatus.Waiting => ("text-warning", "bi-hourglass-split"),
                                                            PaymentGatewayStatus.Success => ("text-success", "bi-check-circle"),
                                                            PaymentGatewayStatus.Failed => ("text-danger", "bi-x-circle"),
                                                            PaymentGatewayStatus.Settlement => ("text-secondary", "bi-dash-circle"),
                                                            _ => ("text-muted", "bi-question-circle")
                                                        };
                                                    }
                                                    <i class="bi @icon @statusClass me-2"></i>
                                                    <span>درگاه پرداخت: @payment.PaymentGatewayTitle</span>
                                                </div>
                                                <div class="text-muted small">
                                                    @payment.RedirectAt?.ToString("yyyy/MM/dd HH:mm:ss")
                                                </div>
                                            </div>
                                            <div class="mt-2">
                                                <small>شناسه پرداخت: @payment.Id</small>
                                            </div>
                                            <div class="mt-2 @statusClass">
                                                <small>وضعیت: @payment.Status</small>
                                            </div>

                                            <div class="mt-2">
                                                <small>مبلغ: @payment.Amount @payment.Currency</small>
                                            </div>

                                            <div class="mt-2">
                                                <small>شماره پرداخت موفق درگاه: @payment.SuccessReference</small>
                                            </div>
                                            <div class="mt-2">
                                                <small>شماره مرجع: @payment.ReferenceRetrievalNumber</small>
                                            </div>
                                            <div class="mt-2">
                                                <small>شماره پیگیری: @payment.TrackingNumber</small>
                                            </div>

                                            <div class="mt-2">
                                                <small>شماره کارت: @payment.Pan</small>
                                            </div> 

                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>